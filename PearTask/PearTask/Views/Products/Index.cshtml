@model List<Product>
@{
    ViewData["Title"] = "Index";
}
@section datatable{
        <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<h1>Product Index</h1>

<a asp-action="Add" class="btn btn-primary">Add New Product</a>
@if (Model.Count == 0)
{
        <h1>No products has been inserted yet</h1>
}
else{
    <div class="table-responsive-md">
        <table id="productsTable" class="table table-borderd table-hover text-center">
            <thead>
                <tr>
                    <th>Product ID     </th>
                    <th>Product Name   </th>
                    <th>QuantityPerUnit</th>
                    <th>Supplier Name  </th>
                    <th>ReorderLevel   </th>
                    <th>UnitPrice      </th>
                    <th>UnitsInStock   </th>
                    <th>UnitsOnOrder   </th>
                    <th>Edit           </th>
                    <th>Delete         </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductID</td>
                        <td>@item.ProductName</td>
                        <td>@item.QuantityPerUnit</td>
                        <td>@item.Supplier.SupplierName</td>
                        <td>@item.ReorderLevel</td>
                        <td>@item.UnitPrice</td>
                        <td>@item.UnitsInStock</td>
                        <td>@item.UnitsOnOrder</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-secondary">Edit</a> 
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.ProductID" class="btn btn-danger">Delete</a>
                        </td>
                        
                        
                    </tr>
                }
            </tbody>
        </table>

    </div>

}


@section Scripts {
        <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
        <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#productsTable').DataTable();
            });
        </script>
}

