@model IEnumerable<PearTask.Models.Supplier>
@{
    ViewData["Title"] = "Index";
}
@section datatable{
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}

<h1>Supplier Index</h1>
<a asp-action="Add" class="btn btn-primary">Add New Supplier</a>

<table id="suppliersTable" class="table">
    <thead>
        <tr>
            <th>Supplier ID  </th>
            <th>Supplier Name</th>
            <th>Edit         </th>
            <th>Delete       </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SupplierID</td>
                <td>@item.SupplierName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierID" class="btn btn-secondary">Edit</a> 
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.SupplierID" class="btn btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/js/datatables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#suppliersTable').DataTable();
        });
    </script>
}

